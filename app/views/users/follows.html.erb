<div class="container px-5 px-sm-0">
  <div class="row">
    <h2>Follows Users</h2>
    <div class="col-md-12">
      <table class="table">
        <% if @users.exists? %>
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= attachment_image_tag(user, :profile_image, size: '60x60', fallback: "no-image-icon.jpg") %></td>
                <td><%= user.name %></td>
                <td>フォロー数：<%= user.followings.count %></td>
                <td>フォロワー数：<%= user.followers.count %></td>
                <td><%= link_to 'Show', user_path(user), class: "user_#{user.id}" %></td>
              </tr>
            <% end %>
        <% else %>
          <p>ユーザーはいません</p>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>